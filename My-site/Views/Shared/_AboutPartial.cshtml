@model HomeIndexVM
@using My_site.Core.Extensions
<div id="about" class="page pt-about" data-simplebar>
    <section class="container">

        <!-- Section Title -->
        <div class="header-page mt-70 mob-mt">
            <h2>درباره من</h2>
            <span></span>
        </div>

        <!-- Personal Info Start -->
        <div class="row mt-100">

            <!-- Information Block -->
            <div class="col-lg-12 col-sm-12">
                <div class="info box-1">
                    <div class="row">
                        <div class="col-lg-3 col-sm-4">
                            <div class="photo">
                                @if (!string.IsNullOrEmpty(Model.Abouts.FirstOrDefault()?.ImgName))
                                {
                                    <img class="profile-img"
                                         src="@($"{PathTools.PathImageClient}/{Model.Abouts.FirstOrDefault()?.ImgName}")"
                                         alt="@Model.Abouts.FirstOrDefault()?.UserFullName" />
                                }
                            </div>
                        </div>

                        <div class="col-lg-9 col-sm-8">
                            <h4 class="user-name">
                                @Model.Abouts.FirstOrDefault()?.UserFullName
                            </h4>

                            <p class="user-bio">
                                @Model.Abouts.FirstOrDefault()?.AboutUser
                            </p>
                        </div>

                        <div class="col-lg-3 col-sm-12 pt-50">
                            <a href="#" class="btn-st">دریافت رزومه</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Testimonial Row Start -->
        <div class="row testimonial mt-60">

            <!-- Header Block -->
            <div class="col-md-12">
                <div class="header-box mb-50">
                    <h3>دیدگاه مشتریان</h3>
                </div>
            </div>

            <div class="owl-carousel owl-theme">

