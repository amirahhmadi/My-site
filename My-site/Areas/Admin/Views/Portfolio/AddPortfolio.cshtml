@using GameOnline.Core.ExtenstionMethods
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model My_site.Core.ViewModels.PortfolioViewModel.PortfolioVM
@{
    ViewData["title"] = "ثبت نمونه کار";
    ViewData["selected"] = "portfolios";
}
<div class="content-wrapper" style="min-height: 797px;">
    <section class="content-header">
        <div class="container-fluid">
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">ثبت نمونه کار</h3>
                        </div>
                        <form asp-action="AddPortfolio"
                              method="post"
                              enctype="multipart/form-data">

                            @Html.AntiForgeryToken()

                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="PortfolioName"></label>
                                    <input asp-for="PortfolioName" class="form-control" />
                                    <span asp-validation-for="PortfolioName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ImgFile"></label>
                                    <input asp-for="ImgFile" type="file" class="form-control" />
                                    <span asp-validation-for="ImgFile" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">ثبت</button>
                                <a asp-action="Index" class="btn btn-primary">بازگشت</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>